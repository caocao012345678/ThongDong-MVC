@{
    ViewBag.Title = "ThongDong - Login";
}
<div class="container">
    <div class="login-form">
        <h2 class="slideanim-top">Login</h2>
        <form action="@Url.Action("Login", "Accounts")" method="post">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()
            <div class="inputGroup">
                <input type="text" required name="UserName"/>
                <label for="Username"><span class="glyphicon glyphicon-user"></span> Username</label>
            </div>
                        
            <div class="inputGroup">
                <input type="password" required name="UserPassword" />
                <label for="Password"><span class="glyphicon glyphicon-lock"></span> Password</label>
            </div>

            <div class="text-center">
                <button type="submit" class="button-form">LOGIN</button>
            </div>

        </form>
        <div class="login-link">
            <p>
                Don't have an account? @Html.ActionLink("Register", "Register", "Accounts")
            </p>
        </div>
    </div>
</div>
