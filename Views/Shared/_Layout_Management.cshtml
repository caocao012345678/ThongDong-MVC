<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <link href="~/Styles/styleAdmin.css" rel="stylesheet">
</head>
<style>
    .navbar-logo {
        width: 45px;
        height: 45px;
        border-radius: 50%;
    }

    footer p {
        color: #666;
        font-size: 14px;
        margin: 0;
    }

    footer a {
        color: #666;
        text-decoration: none;
    }

        footer a:hover {
            text-decoration: underline;
        }

    footer {
        background-color: rgba(197, 197, 197, 0.5);
        padding: 25px;
        margin-top: 20px;
        position: relative;
        z-index: 0;
        text-align: center;
    }
</style>
<body>
    <div class="sidebar sidebar-dark sidebar-fixed" id="sidebar">
        <div class="sidebar-brand d-none d-md-flex">
            <a href="@Url.Action("Index", "ThongDong")">
                <img src="~/Image/Logo-radius.png" class="navbar-logo" />
            </a>
        </div>
        <ul class="sidebar-nav" data-coreui="navigation" data-simplebar="">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index")">
                    Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Tours")">
                    Tours
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Account")">
                    Accounts
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("OderProcess")">
                    Oders Processing
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Feedback")">
                    Feedback
                </a>
            </li>
        </ul>
    </div>
    <div class="wrapper d-flex flex-column min-vh-100 bg-light">
        <header class="header header-sticky mb-4">
            <div class="container-fluid">
                <ul class="header-nav d-none d-md-flex">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index")">Dashboard</a></li>
                </ul>
                <p class="header-nav ms-auto"></p>
                <ul class="header-nav ms-3">
                    <li class="nav-item dropdown">
                        <a class="nav-link py-0" data-coreui-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            <div class="avatar avatar-md"><img class="avatar-img" src="~/Image/admin.jpg" alt="user@email.com"></div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end pt-0">
                            <a class="dropdown-item" href="@Url.Action("Logout", "Accounts")">
                                Logout
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>
        <div class="body flex-grow-1 px-3">
            <div class="container-lg">
                @RenderBody()
            </div>
        </div>
        <footer class="container-fluid text-center">
            <p>
                &copy; @DateTime.Now.Year ThongDong Resort. All rights reserved.| <a href="#">Privacy Policy</a> | <a href="#">
                    Terms
                    of Service
                </a>
            </p>
        </footer>
    </div>
    <script src="~/Scripts/coreui.bundle.min.js"></script>
    <script src="~/Scripts/scripts.js"></script>
</body>